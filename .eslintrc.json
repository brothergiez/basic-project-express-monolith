{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "mocha": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "newline-per-chained-call": "off",
        "arrow-body-style": "off",
        "no-unneeded-ternary": "off",
        "indent": [
            "error",
            2
        ],
        "no-unused-vars": "error"
    },
    "overrides": [
        {
            "files": ["*.spec.js"],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}
