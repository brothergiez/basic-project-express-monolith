{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "mocha": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": [
            "error",
            2
        ],
        "no-unused-vars": "error"
    },
    "overrides": [
        {
            "files": ["*.spec.js"],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}
